{
  "manifest_version": 3,
  "name": "UCSD CAPE Extension",
  "version": "0.0.0",

  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "description": "UCSD Course and Professor Evaluations (CAPE) web scraper",
  "icons": {
    "16": "src/images/icon-16.png",
    "32": "src/images/icon-32.png",
    "48": "src/images/icon-48.png",
    "128": "src/images/icon-128.png"
  },

  "author": "Jacob.J.Lee@outlook.com",
  "content_scripts": [
    {
      "js": ["src/scripts/content.js"],
      "matches": [
        "https://cape.ucsd.edu/*",
        "https://cape.ucsd.edu/response/Result.aspx",
        "https://cape.ucsd.edu/resopnses/CAPEReport.aspx"
      ]
    }
  ]
}